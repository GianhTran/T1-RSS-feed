<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_tiny"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:padding="@dimen/dimen_tiny">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_small"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_medium"
        android:singleLine="true"
        android:textSize="@dimen/text_size_medium"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.example.framgia.t1_rss_feed.ui.view.FontIcon
            android:id="@+id/font_home_viewed"
            style="@style/FontIconStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_small"
            android:text="@string/ic_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/font_home_viewed"
            android:layout_toRightOf="@id/font_home_viewed"
            android:paddingLeft="@dimen/dimen_medium"
            android:paddingRight="@dimen/dimen_medium"
            android:paddingStart="@dimen/dimen_medium"
            android:text="@string/msg_read_more"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small"
            android:textStyle="italic"/>
    </RelativeLayout>


</LinearLayout>
